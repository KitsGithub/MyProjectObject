
.nodata{
  height: 100vh;
  background-color: #fafafa;
  overflow: hidden;
  border-top: 1rpx solid #ebebeb;
}
.no-data-img{
  display: block;
  width: 299rpx;
  height: 259rpx;
  margin: 100rpx auto;
}
.shopcar{
  height: calc(100vh - 2rpx);
  background-color: #fafafa;
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: justify;
  color: #333333;
  border-top: 1rpx solid #ebebeb;
}
.head{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  padding: 0 30rpx;
  overflow: hidden;
  background-color: #ffffff;
  margin-bottom: 10rpx;
  border-bottom:1px solid #ebebeb;
}
.business-img{
  display: block;
  min-width: 36rpx;
  max-width: 36rpx;
  height: 37rpx;
}
.business{
  flex: 1;
  text-indent: 10rpx;
}
.handle {
  min-width: 100rpx;
  max-width: 100rpx;
  font-family: PingFang-SC;
  font-size: 24rpx;
  text-align: right;
  color: #999999;
}
.car-module{
  display: flex;
  width: 100%;
  height: 200rpx;
  margin-bottom:10rpx;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0px 2rpx 5rpx 0 rgba(0, 0, 0, 0.04);
}
.car-sel{
  display: flex;
  min-width: 86rpx;
  max-width: 86rpx;
  height: 100%;
  align-items: center;
}
.sel-img{
  display: block;
  margin: 0 auto;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.car-good{
  display: block;
  width: 180rpx;
  height: 180rpx;
}
.car-detail{
  display: block;
  flex:1;
  height: 200rpx;
  padding-left: 20rpx;
  padding-right:30rpx;
  margin-top: 20rpx;
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: left;
  color: #333333;
  line-height:40rpx;
}
.car-del{
  display: block;
  width: 120rpx;
  height: 200rpx;
  line-height: 200rpx;
  background-color: #ff2929;
  font-family: PingFang-SC;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}
.good-name{
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  min-height: 80rpx;
}
.spec{
  font-size: 24rpx;
  text-align: left;
  color: #999999;
}
.item-data{
  display: flex;
  line-height:60rpx;
}
.item-data .price{
  display: block;
  flex: 1;
  color: #ff2929;
  font-weight: 500;
}
.item-data .num{ 
  display: block;
  flex: 1;
  font-weight: 500;
  color: #999999;
  text-align: right;
}
.handle-num{
  display: flex;
  padding-top:20rpx;
  font-size: 30rpx;
  text-align: center;
  color: #333333;
}
.normal{
  display: block;
  min-width: 60rpx;
  max-width: 60rpx;
  height: 60rpx;
  line-height: 50rpx;
  color: #999999;
  border-radius: 4rpx;
  background-color: #f5f5f5;
  font-size:65rpx;
}
/*禁用样式*/
.disabled{ 
  color: #ccc; 
} 
.number{
  display: block;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 10rpx;
  background-color: #f5f5f5;
}
.sel-all{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #ffffff;
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: left;
  color: #333333;
  border-top: 1px solid #ebebeb;
}
.all{
  padding-left: 30rpx;
  display:flex;
  align-items:center;
}
.all span{
  padding-left: 20rpx;
}
.total{
  flex:1;
  text-align:right;
  padding-right:30rpx;
}
.total span{
  color: #ff2929;
}
.dispose{
  display: block;
  flex:1;
  min-width: 220rpx;
  max-width: 220rpx;
  font-size: 34rpx;
  color: #ffffff;
  text-align: center;
  background-color: #ff2929;
}