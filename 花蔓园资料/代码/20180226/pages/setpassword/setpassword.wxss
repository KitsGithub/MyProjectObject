.password-view{
  height: 100vh;
  background-color: #fafafa; 
  font-size: 30rpx;
  text-align: left;
  overflow: hidden;
}
.form{
  display: block;
  background-color: #ffffff;
  padding-left: 30rpx;
  margin-top: 10rpx;
}
.module{
  display: flex;
  height: 90rpx;
  line-height:90rpx;
  border-bottom:1rpx solid #e5e5e5;
}
.module span{
  display: block;
  padding-right: 20rpx;
}
.module input{
  flex: 1;
  height:100%;
  line-height:90rpx;
}
.last{
  border-bottom: none !important;
}
.com-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #055b58; 
  font-family: PingFang-SC;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  border-radius:0;
}