.list-tabs{
  display: flex;
  height: 80rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #ebebeb;
}
.list-tabs .tab{
  flex: 1;
  font-family: PingFang-SC;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333333;
}
.tab-active{
  color: #055b58 !important;
}
.type-img{
  width:36rpx;
  height:36rpx;
  padding-top:22rpx;
}
.list{
  width: 100%;
  height: calc(100vh - 81rpx);
  background-color: #fafafa;
}
.card{
  display: flex;
  flex-wrap:wrap;
  padding:0 30rpx 70rpx;
  justify-content:space-between;
}
.c-module{
  display:block;
  width: 340rpx;
  height: 451rpx;
  margin-top:5px;
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: justify;
  color: #333333;
  background-color: #ffffff;
  line-height:55rpx;
}
.c-img{
  display: block;
  width: 340rpx;
  height: 340rpx;
  background-color:#eae9e9;
}
.c-title{ 
  display: block;
  max-width: 340rpx;
  overflow: hidden; 
  text-overflow:ellipsis; 
  white-space: nowrap;
  padding: 0 10rpx;
}
.data{
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}
.price{
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  text-align: justify;
  color: #ff2929;
}
.sales{
  font-size: 24rpx;
  text-align: justify;
  color: #999999;
}
.goodlist{
  display: block;
  margin-top:10rpx;
  margin-bottom: 70rpx;
  width: calc(100% - 30rpx);
  padding-left: 30rpx;
  font-family: PingFang-SC;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: justify;
  color: #333333;
  background-color:#ffffff;
}
.l-module{
  display: flex;
  width: calc(100% - 30rpx);
  height: 240rpx;
  padding: 10rpx 30rpx 10rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}
.l-img{
  display: block;
  width: 240rpx;
  height: 240rpx;
  overflow:hidden;
}
.l-title{
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.l-detail{
  display: block;
  flex: 1;
  padding-top:30rpx;
}