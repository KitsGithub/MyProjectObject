.user-center{
  background-color: #fafafa;
  height: 100vh;
}
.user{
  position: relative;
  display: block;
  width: 100%;
  height: 375rpx;
  overflow: hidden;
}
.user-bg{
  position: absolute;
  bottom:-60rpx;
  left: 0;
  width: 100%;
  min-height: 100%;
  filter: blur(4rpx); 
}
.user-header{
  position:relative;
  display:block;
  margin:60rpx auto 0;
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  z-index:1;
}
.user-name{
  position:relative;
  display: block;
  margin-top: 20rpx;
  font-family: PingFang-SC;
  font-size: 32rpx;
  text-align: center;
  color: #333333;
  z-index:1;
}
.user-grade{
  position: relative;
  display: flex;
  margin: -30rpx auto 30rpx;
  width: 690rpx;
  height: 140rpx;
  align-items:center;
  border-radius: 14rpx;
  background-color: #ffffff;
  box-shadow: 0px 1rpx 20rpx 0 rgba(0, 0, 0, 0.1);
  font-family: PingFang-SC;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  color: #055b58;
  z-index: 2;
}
.grade{
  display: block;
  height: 80rpx;
  flex: 1;
  border-right: 2rpx solid #e6e6e6;
}
.balance{
  display: block;
  height: 80rpx;
  flex: 1;
}
.title{
  display: block;
  font-family: PingFang-SC;
  font-size: 24rpx;
  text-align: center;
  color: #333333;
}
.order-center{
  display: block;
  width: 100%;
  background-color:#ffffff;
  font-family: PingFang-SC;
  font-size: 26rpx;
  text-align: center;
  color: #999999;
  line-height:45rpx;
}
.order-center .center{
  display: flex;
  margin-left: 30rpx; 
  padding:20rpx 30rpx 20rpx 0;
  height:49rpx;
  line-height:49rpx;
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: left;
  color: #333333;
  background-color:#ffffff;
  align-items:center;
  border-bottom: 1px solid #e5e5e5;
}
.order-center .center span{
  display: block;
  flex: 1;
  text-indent:18rpx;
}
.order-img{
  flex:1;
  max-width: 40rpx;
  min-width: 40rpx;
  height: 40rpx;
}
.to{
  flex:1;
  max-width: 16rpx;
  min-width:16rpx;
  height: 28rpx;
}
.order-type{
  display: flex;
  padding:27rpx 30rpx;
  background-color:#ffffff;
}
.type{
  position: relative;
  display: block;
  flex: 1;
  height:76rpx;
  line-height:35rpx;
}
.type span{
  display: block;
}
.type1-img{
  width: 38rpx;
  height: 38rpx;
}
.type2-img{
  width: 38rpx;
  height: 38rpx;
}
.type3-img{
  width: 33rpx;
  height: 38rpx;
}
.type4-img{
  width: 42rpx;
  height: 38rpx;
}
.label{
  position: absolute;
  top:-15rpx;
  right: 35rpx;
  display: block;
  min-width: 20rpx;
  height: 30rpx;
  padding:0 5rpx;
  line-height:30rpx;
  background-color: #ff0000;
  border-radius: 50%;
  text-align: center;
  color: #ffffff;
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
}
.handle{
  margin-top: 20rpx;
}
.last{
  border-bottom: none !important;
}