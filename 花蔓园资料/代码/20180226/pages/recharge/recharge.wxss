/* pages/recharge/recharge.wxss */
.recharge-view{
  width: 100%;
  height: 100vh;
  background-color: #f5fafa;
  border-top: 1rpx solid #ebebeb;
}
.reg-top{
  position: relative;
  display: block;
  height: 185rpx;
  overflow: hidden;
}
.reg-topimg{
  margin: -128rpx auto;
  display: block;
  width: 424rpx;
  height: 313rpx;
}
.reg-footerimg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 391rpx;
  height: 163rpx;
}
.reg-sel{
  display: block;
  width: 690rpx;
  height: 480rpx;
  margin: 30rpx auto;
  border: 6rpx solid rgba(5, 91, 88, 0.4);
  border-radius: 5rpx;
  background-color: #ffffff;
}
.reg-img{
  display: block;
  width: 177rpx;
  height: 23rpx;
  margin: 19rpx 0 30rpx 17rpx;
}
.sel-div{
  display: block;
  padding-left: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}
.module{
  display: block;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.module:nth-child(2){
  border-bottom: none;
}
.car-sel{
  display: flex;
  height: 89rpx;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5; 
  font-family: PingFang-SC;
  font-size: 30rpx;
  text-align: left;
  color: #333333;
}
.car-sel span{
  display: block;
  text-indent: 7rpx;
}
.car-sel span:nth-child(3){
  flex: 1;
  text-align: right;
}
.sel-img{
  display: block;
  margin: 0 auto;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.prefer{
  display: block;
  padding: 20rpx 55rpx;
  font-family: PingFang-SC;
  font-size: 26rpx;
  text-align: left;
  color: #999999;
  line-height: 35rpx;
}
.prefer span{
  display: block;
}
.hint{
  display: block;
  padding:0 30rpx;
  font-family: PingFang-SC;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: left;
  color: #999999;
}
.hint span{
  display: block;
}
.reg-btn{
  position: relative;
  display: block;
  width: 690rpx;
  height: 98rpx;
  line-height: 98rpx;
  margin: 80rpx auto;
  border-radius: 10rpx;
  background-color: #055b58;
  font-family: PingFang-SC;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  z-index: 2;
}