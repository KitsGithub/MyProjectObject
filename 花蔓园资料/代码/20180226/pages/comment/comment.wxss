/*发表评价  */
.comment-view{
  height: 100vh;
  padding: 10rpx 30rpx;
  background-color: #fafafa;
}
.form{
  position: relative;
  display: block;
  height: 100%;
}
.text{
  background-color:#ffffff;
  width:calc(100% - 40rpx);
  min-height: 300rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size:30rpx;
}
.upload{
  display: block;
  width: 140rpx;
  height: 140rpx;
  font-family: PingFang-SC;
  font-size: 20rpx;
  text-align: center;
  color: #bcbcbc;
  border-radius: 6rpx;
  border: 1rpx solid #cccccc;
}
.photo-img{
  margin: 30rpx auto 0;
  width: 54rpx;
  height: 54rpx;
}
.upload p{
  display:block;
  text-align: center;
}
.com-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #055b58; 
  font-family: PingFang-SC;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  border-radius:0;
}